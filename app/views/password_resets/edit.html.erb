<div class="w-[calc(100%-4rem)] max-w-3xl m-8">
  <h2>Set New Password</h2>
  <%= turbo_frame_tag "flash" do %>
    <%= render "partials/flash" %>
  <% end %>
    <div class="col-md-6 col-md-offset-3 w-full max-w-xl">
      <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true, class: 'flex flex-col items-start w-full') do |f| %>
        <%= hidden_field_tag :email, @user.email %>
        <div class="mb-6 w-full">
          <%= f.label :password, 'New Password', class: 'block mb-2 text-sm font-medium text-gray-900' %>
          <%= f.password_field :password, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', required: false  %>
        </div>
        <div class="mb-6 w-full">
          <%= f.label :password_confirmation, 'Confirm New Password', class: 'block mb-2 text-sm font-medium text-gray-900' %>
          <%= f.password_field :password_confirmation, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', required: false  %>
        </div>
        <%= f.submit "Change Password", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %>
      <% end %>
    </div>
  </div>
</div>
