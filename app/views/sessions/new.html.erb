<% provide(:title, "Log in") %>
<div class="w-[calc(100%-4rem)] max-w-3xl m-8">
  <h2 class="mt-4 self-start">Login</h2>
  <%= turbo_frame_tag "flash" do %>
    <%= render "partials/flash" %>
  <% end %>
  <div class="col-md-6 col-md-offset-3 w-full">
    <%= form_with(url: login_path, scope: :session, local: true, class: 'flex flex-col items-center w-full') do |f| %>
      <div class="mb-6 w-full">
        <%= f.label :email, class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.email_field :email, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', placeholder: "john.doe@email.com", required: true %>
      </div>
      <div class="mb-6 w-full">
        <%= f.label :password, class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.password_field :password, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', required: true  %>
      </div>
      <div class="flex flex-row justify-between items-center w-full">
        <%= f.label :remember_me, class: "flex items-start" do %>
          <div class="flex items-center h-5">
            <%= f.check_box :remember_me, "aria-describedby": "remember", type: "checkbox", class: "w-4 h-4 bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800" %>
          </div>
          <div class="ml-3 text-sm">
            <span class="font-medium text-gray-900 dark:text-gray-300">Remember me</span>
          </div>
        <% end %>
        <p class="text-xs"><%= link_to "Forgot your password?", new_password_reset_path %></p>
      </div>
      <%= f.submit "Login", class: "self-start text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-10 py-2.5 text-center" %>
    <% end %>
    <p class="text-sm mt-8">New Instructor? <%= link_to "Request an account now!", new_request_path %></p>
  </div>
</div>
