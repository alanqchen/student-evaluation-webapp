<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @course, local: true) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :set_course_active %>
      <%= f.check_box :active %>
      <%= f.submit "Create/Edit course", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <% end %>
  </div>
</div>